      justify-content: center;
    }
    .filters select, .filters button {
      padding: 0.5rem;
      font-size: 1rem;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .catalog {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }
    .product {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.2s ease;
      position: relative;
    }
    .product:hover {
      transform: scale(1.03);
    }
    .product img {
      max-width: 100%;
      height: auto;
    }
    .product h3 {
      margin: 1rem 0 0.5rem;
      font-size: 1.2rem;
    }
    .product p {
      font-size: 1.1rem;
      font-weight: 600;
      color: #0b0c3f;
      margin-bottom: 1rem;
    }
    .product button {
      background: #0b0c3f;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      margin-bottom: 1rem;
    }
    #cart {
      position: fixed;
      top: 20px;
      right: 20px;
      background: white;
      border: 2px solid #0b0c3f;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      max-width: 300px;
    }
    #cart h2 {
      margin-top: 0;
      font-size: 1.2rem;
      color: #0b0c3f;
    }
    #cart ul {
      list-style: none;
      padding-left: 0;
    }
    #cart li {
      margin-bottom: 0.5rem;
    }
    #total {
      font-weight: bold;
      margin-top: 0.5rem;
    }
    #checkout-btn {
      margin-top: 1rem;
      background: #ff9800;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
    }
    footer {
      background: #0b0c3f;
      color: white;
      padding: 2rem;
      text-align: center;
      font-size: 0.9rem;
    }
  </style>
  <script>
    const cart = [];
    function addToCart(name, price) {
      cart.push({ name, price });
      renderCart();
    }
    function renderCart() {
      const list = document.getElementById('cart-items');
      list.innerHTML = '';
      let total = 0;
      cart.forEach((item) => {
        const li = document.createElement('li');
        li.textContent = `${item.name} – ${item.price} ?`;
        list.appendChild(li);
        total += item.price;
      });
      document.getElementById('total').textContent = `Сума: ${total} ?`;
    }
    function checkout() {
      alert('Дякуємо за замовлення! Менеджер зв’яжеться з вами.');
    }
  </script>
